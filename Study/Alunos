('02540', 'RA99999', 'Mariana Costa', 'Rua Principal, 500', 'Feminino', '2003-05-30'),
('010', 'RA12360', 'Alex Santos', 'Rua Chile, 10', 'Não-binário', '2005-12-12');

-- Verificação da tabela criada
SELECT * FROM ALUNOS;