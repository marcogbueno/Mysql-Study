-- 1. Criação da tabela ALUNOS
CREATE TABLE ALUNOS (
    matricula VARCHAR(10) PRIMARY KEY, -- Usamos VARCHAR para manter os zeros à esquerda (ex: 001)
    RA VARCHAR(15) NOT NULL,
    nome VARCHAR(100) NOT NULL,
    endereco VARCHAR(255),
    genero VARCHAR(20),                -- Flexível para diferentes identidades em 2025
    data_nascimento DATE               -- Formato padrão YYYY-MM-DD
);

-- Inserção de dados
INSERT INTO ALUNOS (matricula, RA, nome, endereco, genero, data_nascimento) VALUES
